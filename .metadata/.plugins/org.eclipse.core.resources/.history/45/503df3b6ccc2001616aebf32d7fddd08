package day14;

public class Disc {
	int positions;
	int currentPosition;
	public Disc(int positions, int current) {
		this.positions = positions;
		this.currentPosition = current;
	}
	
	public int moveForward(){
		return ++currentPosition;
	}
	
	public int timeUntilZero(){
		return positions - currentPosition;
	}
}
